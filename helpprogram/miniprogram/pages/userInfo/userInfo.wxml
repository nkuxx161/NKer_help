<!--pages/userInfo/userInfo.wxml-->
<view class="a1">
  <van-notice-bar
  left-icon="volume-o"
  text="使用过程中切记保护个人安全，选择人流量大的地点交接"
/>
<van-row gutter="10">
  <van-col span="7" offset="1"><van-image round width="180rpx" height="180rpx" src="{{img}}" /></van-col>
  <van-col span="14" offset="1">
    <text wx:if="{{ifLogin=='No'}}">请点击下方按钮登录</text>
    <text wx:if="{{ifLogin=='Yes'}}" style="font-size:40rpx">{{name}}</text>
  </van-col>
</van-row>
</view>
<button wx:if="{{ifLogin=='No'}}" class='bottom' type='primary' bindtap="getUserProfile">
  授权登录
 </button>
<button wx:if="{{flag=='No'}}" block bindtap="goNk" class="button1">身份认证</button>
<button wx:if="{{ifLogin=='Yes'}}" block bindtap="goToDetail" class="button1">个人资料</button>
<button wx:if="{{ifLogin=='Yes'}}" block bindtap="goToHelp" class="button1">帮助与反馈</button>
<button wx:if="{{ifLogin=='Yes'}}" block bindtap="goToAboutUs" class="button1">关于我们</button>
<van-button wx:if="{{ifLogin=='Yes'}}" type="warning"class="quit" block bindtap="showDialog2">退出登录</van-button>
<van-dialog id="van-dialog" />
<van-toast id="van-toast" />
